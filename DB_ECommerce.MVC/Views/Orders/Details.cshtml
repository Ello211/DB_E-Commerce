@model DB_ECommerce.MVC.ViewModels.Orders.OrderDetailsViewModel

@{
    ViewData["Title"] = "Order Details";
}

<h2>Order Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.OrderID</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate</dd>

        <dt class="col-sm-2">Total Price</dt>
        <dd class="col-sm-10">@Model.TotalPrice</dd>

        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Customer?.LastName</dd>

        <dt class="col-sm-2">PaymentID</dt>
        <dd class="col-sm-10">@Model.PaymentDisplay</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.OrderID" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>

