@model IEnumerable<DB_ECommerce.MVC.ViewModels.ProductCategories.ProductCategoryListViewModel>

@{
    ViewData["Title"] = "Product Categories";
}

<h2>Product Categories</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.CategoryName</td>
                <td>
                    <a asp-action="Delete" asp-route-productId="@item.ProductID" asp-route-categoryId="@item.CategoryID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

