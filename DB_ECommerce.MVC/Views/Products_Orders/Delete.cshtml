@model DB_ECommerce.MVC.ViewModels.Products_Orders.ProductOrderDetailsViewModel

@{
    ViewData["Title"] = "Delete Product Order";
}

<h2>Delete Product Order</h2>

<h3>Are you sure you want to delete this order?</h3>
<div>
    <h4>Product: @Model.ProductName</h4>
    <p>Quantity: @Model.Quantity</p>
    <p>Total Price: @Model.TotalPrice.ToString("C")</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ProductOrderID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
