@{
    ViewData["Title"] = "Welcome!";
}

<div class="container text-center mb-3 mt-5">
    <h1 class="display-3"><strong>Welcome to Globalia!</strong></h1>
    <p class="lead">From Anywhere to Everywhere – Globalia Has It All!</p>
    <p class="lead">Find and order your favourite products now.</p>

    <a class="btn btn-primary btn-lg" asp-controller="Products" asp-action="Index">See all our products</a>
    <a class="btn btn-outline-secondary btn-lg" asp-controller="Categories" asp-action="Index">View Categories</a>
</div>

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <img src="~/images/meow.jpg" class="card-img-top" alt="Kategorie 1">
                <div class="card-body">
                    <h5 class="card-title">Categories</h5>
                    <p class="card-text">Browse different product categories.</p>
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-primary">Learn more</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <img src="~/images/Produkt.jpg" class="card-img-top" alt="Products">
                <div class="card-body">
                    <h5 class="card-title">Popular Products</h5>
                    <p class="card-text">Our customers love these products.</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Browse now</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <img src="~/images/sale.jpg" class="card-img-top" alt="Angebote">
                <div class="card-body">
                    <h5 class="card-title">Sales</h5>
                    <p class="card-text">Get the best deals and save money.</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Explore Sales</a>
                </div>
            </div>
        </div>
    </div>
</div>




