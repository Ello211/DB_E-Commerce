<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DB_ECommerce.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DB_ECommerce.MVC.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <div class="wrapper flex-grow-1">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-5">
                <div class="container-fluid">
                    <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">Globalia</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon" style="filter: invert(1);"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item"><a class="nav-link text-light @(ViewData["ActivePage"]?.ToString() == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="nav-item"><a class="nav-link text-light @(ViewData["ActivePage"]?.ToString() == "Categories" ? "active" : "")" asp-controller="Categories" asp-action="Index">Categories</a></li>
                            <li class="nav-item"><a class="nav-link text-light @(ViewData["ActivePage"]?.ToString() == "Customers" ? "active" : "")" asp-controller="Customers" asp-action="Index">Customers</a></li>
                            <li class="nav-item"><a class="nav-link text-light @(ViewData["ActivePage"]?.ToString() == "Orders" ? "active" : "")" asp-controller="Orders" asp-action="Index">Orders</a></li>
                            <li class="nav-item"><a class="nav-link text-light @(ViewData["ActivePage"]?.ToString() == "Payments" ? "active" : "")" asp-controller="Payments" asp-action="Index">Payments</a></li>
                            <li class="nav-item"><a class="nav-link text-light @(ViewData["ActivePage"]?.ToString() == "Products" ? "active" : "")" asp-controller="Products" asp-action="Index">Products</a></li>
                            <li class="nav-item"><a class="nav-link text-light @(ViewData["ActivePage"]?.ToString() == "Shipments" ? "active" : "")" asp-controller="Shipments" asp-action="Index">Shipments</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <!-- Hauptinhalt, der sich flexibel ausdehnt -->
        <main class="container flex-grow-1">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
