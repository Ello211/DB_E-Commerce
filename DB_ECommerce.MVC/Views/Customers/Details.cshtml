@model DB_ECommerce.MVC.ViewModels.Customers.CustomerDetailsViewModel

@{
    ViewData["Title"] = "Customer Details";
}

<h2>Customer Details</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Birthday</dt>
        <dd class="col-sm-10">@Model.Birthday</dd>

        <dt class="col-sm-2">Account Created</dt>
        <dd class="col-sm-10">@Model.AccountCreated</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.CustomerID" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>


