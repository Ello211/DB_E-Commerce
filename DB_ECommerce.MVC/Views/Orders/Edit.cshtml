@model DB_ECommerce.MVC.ViewModels.Orders.OrderUpdateViewModel

@{
    ViewData["Title"] = "Edit Order";
}

<h2>Edit Order</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="OrderID" />
    <div class="form-group">
        <label asp-for="OrderDate" class="control-label"></label>
        <input type="date" asp-for="OrderDate" class="form-control" />
        <span asp-validation-for="OrderDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalPrice" class="control-label"></label>
        <input type="number" asp-for="TotalPrice" class="form-control" />
        <span asp-validation-for="TotalPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer" class="control-label"></label>
        <input asp-for="Customer" class="form-control" />
        <span asp-validation-for="Customer" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
