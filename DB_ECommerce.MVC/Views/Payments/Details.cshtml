@model DB_ECommerce.MVC.ViewModels.Payments.PaymentDetailsViewModel

@{
    ViewData["Title"] = "Payment Details";
}

<h2>Payment Details</h2>

<div>
    <h4>Payment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Currency</dt>
        <dd class="col-sm-10">@Model.Currency</dd>

        <dt class="col-sm-2">Payment Method</dt>
        <dd class="col-sm-10">@Model.PaymentMethod</dd>

        <dt class="col-sm-2">Payment Status</dt>
        <dd class="col-sm-10">@Model.PaymentStatus</dd>

        <dt class="col-sm-2">Payment Amount</dt>
        <dd class="col-sm-10">@Model.PaymentAmount</dd>

        <dt class="col-sm-2">Open Payment</dt>
        <dd class="col-sm-10">@Model.OpenPayment</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.PaymentID" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
