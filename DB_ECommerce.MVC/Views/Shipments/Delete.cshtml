@model DB_ECommerce.MVC.ViewModels.Shipments.ShipmentDetailsViewModel

@{
    ViewData["Title"] = "Delete Shipment";
}

<h2>Delete Shipment</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Shipment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tracking Number</dt>
        <dd class="col-sm-10">@Model.TrackingNumber</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.ShipmentStatus</dd>

        <dt class="col-sm-2">Shipment Date</dt>
        <dd class="col-sm-10">@Model.ShipmentDate?.ToString("dd-MM-yyyy")</dd>

        <dt class="col-sm-2">Delivery Date</dt>
        <dd class="col-sm-10">@Model.DeliveryDate?.ToString("dd-MM-yyyy")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ShipmentID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

